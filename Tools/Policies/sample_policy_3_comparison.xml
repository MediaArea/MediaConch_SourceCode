<policy type="and" name="Comparing Significant Characteristics">
    <description>Test to make sure that two files share significant characteristics such as when creating a derivative from a source file.</description>
    <rule name="Same DAR?" value="DisplayAspectRatio" tracktype="Video" occurrence="1" operator="=">compare</rule>
    <rule name="Same Duration?" value="Duration" tracktype="Video" occurrence="1" operator="=">compare</rule>
    <rule name="Same Width?" value="Width" tracktype="Video" occurrence="1" operator="=">compare</rule>
    <rule name="Same Height?" value="Height" tracktype="Video" occurrence="1" operator="=">compare</rule>
    <rule name="Same Frame Rate?" value="FrameRate" tracktype="Video" occurrence="1" operator="=">compare</rule>
    <rule name="Same Frame Rate Mode?" value="FrameRate_Mode" tracktype="Video" occurrence="1" operator="=">compare</rule>
    <rule name="Same Color Space?" value="ColorSpace" tracktype="Video" occurrence="1" operator="=">compare</rule>
    <rule name="Same Bit Depth?" value="BitDepth" tracktype="Video" occurrence="1" operator="=">compare</rule>
    <rule name="Same Scan Type?" value="ScanType" tracktype="Video" occurrence="1" operator="=">compare</rule>
    <rule name="Same Chroma Subsampling?" value="ChromaSubsampling" tracktype="Video" occurrence="1" operator="=">compare</rule>
    <rule name="Same Presence of Colour Description?" value="colour_description_present" tracktype="Video" occurrence="1" operator="=">compare</rule>
    <rule name="Same Colour Primaries?" value="colour_primaries" tracktype="Video" occurrence="1" operator="=">compare</rule>
    <rule name="Same Transfer Characteristics?" value="transfer_characteristics" tracktype="Video" occurrence="1" operator="=">compare</rule>
    <rule name="Same Matrix Coefficients?" value="matrix_coefficients" tracktype="Video" occurrence="1" operator="=">compare</rule>
</policy>
